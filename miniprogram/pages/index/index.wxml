<van-search value="{{ value }}" placeholder="请输入产品代号或产品名" />

<swiper autoplay="true" circular="true">
	<swiper-item>1</swiper-item>
	<swiper-item>2</swiper-item>
</swiper>

<view id="main">
	<van-sidebar active-key="{{ tabbarIndex }}" bind:change="onTabbarIndex">
		<block wx:for="{{tabbarList}}" wx:key="index">
			<van-sidebar-item title="{{item}}" />
		</block>
	</van-sidebar>

	<view id="cardList">
		<block wx:if="{{tabbarIndex==0}}" wx:for="{{2}}" wx:key="index">
      <van-card custom-class="card" desc="描述信息" title="商品标题" thumb="https://img.yzcdn.cn/vant/ipad.jpeg" />
    </block>
	</view>
</view>

<navigator url="../im/im" open-type="navigate" class="uploader-text">
	<text>即时通信 Demo</text>
</navigator>

<button bindtap="onGetOpenid">获取openid</button>